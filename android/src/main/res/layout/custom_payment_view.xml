<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16sp"
        android:background="@android:color/white"
        app:layout_anchorGravity="center"
        android:foregroundGravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />

            <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="12sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/ivHeaderIcon"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:src="@drawable/ic_master_card" />

            <View
                    android:layout_width="8sp"
                    android:layout_height="match_parent" />

            <TextView
                    android:id="@+id/tvHeaderLabel"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#757575" />

            <View
                    android:layout_width="8sp"
                    android:layout_height="match_parent" />

            <!-- Icons Loop Start -->
            <ImageView
                    android:id="@+id/ivIcon1"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_mada_card" />

            <View
                    android:layout_width="8sp"
                    android:layout_height="match_parent" />

            <ImageView
                    android:id="@+id/ivIcon2"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_master_card" />

            <View
                    android:layout_width="8sp"
                    android:layout_height="match_parent" />

            <ImageView
                    android:id="@+id/ivIcon3"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/ic_visa" />
            <!-- Icons Loop End -->

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="14sp" />

        <com.payfort.fortpaymentsdk.views.FortCardNumberView
                android:id="@+id/etCardNumberView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="Card number"
                app:boxBackgroundShape="outline"
                app:hintTextColor="@color/hint_color"
                android:autofillHints="creditCardNumber"
                android:nextFocusForward="@+id/cardHolderNameView" />

        <View
                android:layout_width="match_parent"
                android:layout_height="16sp" />

        <com.payfort.fortpaymentsdk.views.CardHolderNameView
                android:id="@+id/cardHolderNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/hint_color"
                app:boxBackgroundShape="outline"
                android:backgroundTint="@color/hint_color"
                android:autofillHints="name"
                android:nextFocusForward="@+id/etCardExpiry" />

        <View
                android:layout_width="match_parent"
                android:layout_height="16sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.payfort.fortpaymentsdk.views.CardExpiryView
                    android:id="@+id/etCardExpiry"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/hint_color"
                    android:layout_weight="1"
                    android:autofillHints="creditCardExpirationDate"
                    app:boxBackgroundShape="outline"
                    android:nextFocusForward="@+id/etCardCvv" />

            <View
                    android:layout_width="11sp"
                    android:layout_height="match_parent" />

            <com.payfort.fortpaymentsdk.views.CardCvvView
                    android:id="@+id/etCardCvv"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/hint_color"
                    android:autofillHints="creditCardSecurityCode"
                    android:layout_weight="1"
                    app:boxBackgroundShape="outline" />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="12sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/tvSaveCardDataLabel"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save Card Data"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack" />

            <com.vvvirani.amazon_payfort.CupertinoSwitch
                    android:id="@+id/switchSaveCardData"
                    android:layout_width="52sp"
                    android:layout_height="32sp"
                    android:thumb="@drawable/switch_ios_selector" />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="16sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/tvSetCardDefaultLabel"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Card as Default"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack" />

            <com.vvvirani.amazon_payfort.CupertinoSwitch
                    android:id="@+id/switchSetCardDefault"
                    android:layout_width="52sp"
                    android:layout_height="32sp"
                    android:thumb="@drawable/switch_ios_selector" />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="12sp" />

        <com.payfort.fortpaymentsdk.views.PayfortPayButton
                android:id="@+id/btntPay"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/round_shape"
                android:backgroundTint="#2C6BA4"
                android:text="Add card"
                android:textAlignment="center"
                android:textSize="15sp"
                android:gravity="center" />

    </LinearLayout>
</ScrollView>
